<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="controllers.ModifyPasswordController"
            stylesheets="@../styles/modifypassword.css">

    <children>
        <VBox alignment="CENTER" spacing="20" prefWidth="600" prefHeight="400">
            <children>
                <Label text="Reset Your Password" styleClass="title-label"/>
                <Label text="Create a new password for your account" styleClass="subtitle-label"/>

                <PasswordField fx:id="newPasswordField" promptText="New Password" styleClass="password-field"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" styleClass="password-field"/>

                <Button fx:id="updateButton" text="Update Password" onAction="#handleUpdatePassword" styleClass="update-button"/>

                <Label fx:id="statusLabel" styleClass="status-label"/>
            </children>
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
