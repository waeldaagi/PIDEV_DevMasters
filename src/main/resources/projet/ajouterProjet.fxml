<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.wael.AjouterProjetController">
    <!-- Titre -->
    <Label layoutX="200.0" layoutY="20.0" text="Ajouter un Projet" textFill="#0077b6">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" layoutX="100.0" layoutY="70.0" spacing="15.0">
        <!-- Nom du projet -->
        <TextField fx:id="nomProjetField" promptText="Nom du projet" />

        <!-- Date de fin (Deadline) -->
        <DatePicker fx:id="deadlinePicker" promptText="Date de fin" />

        <!-- Manager -->
        <TextField fx:id="managerField" promptText="Manager" />

        <!-- Nom du client -->
        <TextField fx:id="nomClientField" promptText="Nom du client" />

        <!-- Sélection de l'équipe -->
        <ComboBox fx:id="equipeComboBox" promptText="Sélectionner une équipe" />

        <!-- Bouton Ajouter -->
        <Button onAction="#ajouterProjet" text="Ajouter" style="-fx-background-color: #0077b6; -fx-text-fill: white;" />
    </VBox>
</AnchorPane>