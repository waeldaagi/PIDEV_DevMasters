<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane stylesheets="@styles/signin.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="controllers.SignInController">

    <ImageView fitHeight="720" fitWidth="1080" layoutX="0" layoutY="0">
        <image>
            <Image preserveRatio="true" url="@images/gestionhum.jpg"/>
        </image>
    </ImageView>

    <AnchorPane styleClass="overlay"></AnchorPane>

    <VBox alignment="CENTER" layoutX="620" layoutY="180" maxWidth="400" spacing="20" styleClass="form-container">

        <Label styleClass="header-label" text="WELCOME BACK!" />
        <Label styleClass="subtext-label" text="Log in to continue" />

        <TextField fx:id="emailOrUsernameField" promptText="Email or Username" styleClass="input-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />

        <HBox spacing="10" alignment="CENTER_LEFT">
            <CheckBox fx:id="rememberMe" styleClass="checkbox" text="Remember me" />
            <Hyperlink styleClass="forgot-link" text="Forgot password?" onAction="#redirectToForgotPassword"/>
        </HBox>

        <Button fx:id="loginButton" onAction="#handleLogin" styleClass="login-button" text="LOGIN" />
        <Button text="Don't have an account? Sign up" onAction="#redirectToSignUp" styleClass="redirect-button" />

    </VBox>
</AnchorPane>
