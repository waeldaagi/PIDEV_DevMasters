<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DashboardAdminController"
            stylesheets="@../styles/sidebar.css ,  @../styles/dashboardadmin.css"
            prefHeight="720" prefWidth="1080">

    <left>
        <VBox fx:id="sidebarContainer" styleClass="sidebar">
            <fx:include source="../components/sidebar.fxml"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <ComboBox fx:id="filterComboBox" prefWidth="200" promptText="Select Filter" />
            <LineChart fx:id="userChart" prefHeight="500" prefWidth="800">
                <xAxis>
                    <CategoryAxis fx:id="categoryAxis" label="Date" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="numberAxis" label="Number of Users" />
                </yAxis>
            </LineChart>
        </VBox>
    </center>
</BorderPane>
