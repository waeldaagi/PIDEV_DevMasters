<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="controllers.OTPCodeController"
            stylesheets="@../styles/otpcode.css">

    <children>
        <VBox alignment="CENTER" spacing="30" layoutX="100" layoutY="50" prefWidth="680" prefHeight="450">
            <children>
                <Label text="Secure Account Verification" styleClass="title-label"/>
                <Label text="Enter the 6-digit OTP sent to your email" styleClass="subtitle-label"/>
                <HBox alignment="CENTER" spacing="20" styleClass="otp-container">
                    <TextField fx:id="otpField1" styleClass="otp-field"/>
                    <TextField fx:id="otpField2" styleClass="otp-field"/>
                    <TextField fx:id="otpField3" styleClass="otp-field"/>
                    <TextField fx:id="otpField4" styleClass="otp-field"/>
                    <TextField fx:id="otpField5" styleClass="otp-field"/>
                    <TextField fx:id="otpField6" styleClass="otp-field"/>
                </HBox>
                <Button fx:id="verifyButton" text="Verify OTP" onAction="#handleVerifyOtp" styleClass="verify-button"/>
                <Label fx:id="statusLabel" styleClass="status-label"/>
            </children>
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>