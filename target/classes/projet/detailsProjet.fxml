<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.wael.DetailsProjetController"
      spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <style>-fx-background-color: #f5f6fa;</style>
    
    <Label fx:id="titreLabel" 
           text="Détails du Projet" 
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <GridPane vgap="10" hgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="200"/>
            </columnConstraints>
            
            <Label text="ID du projet:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="idLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Nom du projet:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="nomLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Date limite:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="deadlineLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Manager:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="managerLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Client:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="clientLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Équipe:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="equipeLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10;">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <Label text="Temps restant avant la date limite:" 
               style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
        <Label fx:id="countdownLabel" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"
               alignment="CENTER"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Fermer" 
                onAction="#handleFermerButtonClick"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>
</VBox> 